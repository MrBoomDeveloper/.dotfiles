---
import Html from "@layouts/Html.astro";
import Header from "@components/Header.astro";
import TelegramIcon from "@assets/telegram.svg";
import { getLocaleFromUrl, localeStaticPaths, useTranslations } from "@i18n/translate";
import Footer from "@components/Footer.astro";
import ContactForm from "@components/ContactForm.astro";
import { Image } from "astro:assets";
export const getStaticPaths = localeStaticPaths

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
---

<Html title={t("contact_me")} description="A new way of enjoying anime">
	<Header />

    <div class="section">
        <div class="section-content">
            <div class="section-header">
				<hr />
				<h2 class="section-title">{t("contact_me")}</h2>
				<hr />
			</div>

            <div class="socials">
                <a href="https://t.me/MrBoomDev">
                    <div class="social">
                        <Image src={TelegramIcon} alt="Telegram logo"} />
                        <span>Telegram</span>
                    </div>           
                </a>
            </div>

            <ContactForm />
        </div>
    </div>
    
	<Footer />
</Html>

<style>
    .section {
        width: 100%;
		display: flex;
		justify-content: center;

		.section-content {
            display: flex;
            flex-direction: column;
            gap: 1rem;
			width: 100%;
			max-width: 800px;
			padding: 1rem;
            padding-bottom: 3rem;
		}
    }

    .section-header {
		display: flex;
		align-items: center;
		gap: 2rem;
		padding-block: .75rem;

		.section-title {
			font-family: poppins, sans-serif;
		}

		hr {
			flex-grow: 1;
			height: 1px;
			opacity: .25;
			scale: 1 .25;
		}
	}

    .social {
        background-color: rgb(29, 16, 52);
    }
</style>