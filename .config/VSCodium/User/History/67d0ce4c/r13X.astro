---
import { getLocaleFromUrl, localeStaticPaths } from '@i18n/translate';
import Html from '@layouts/Html.astro';
import Header from '@components/Header.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';

export const getStaticPaths = localeStaticPaths;
const locale = getLocaleFromUrl(Astro.url);
---

<Html>
	<Header />
	<a href={getRelativeLocaleUrl(locale, "/projects/awery")}>Awery</a>
</Html>

<style>
	.section {
        width: 100%;
		display: flex;
		justify-content: center;

		.section-content {
            display: flex;
            flex-direction: column;
            gap: 1rem;
			width: 100%;
			max-width: 800px;
			padding: 1rem;
            padding-bottom: 3rem;
		}
    }

    .section-header {
		display: flex;
		align-items: center;
		gap: 2rem;
		padding-block: .75rem;

		.section-title {
			font-family: poppins, sans-serif;
		}

		hr {
			flex-grow: 1;
			height: 1px;
			opacity: .25;
			scale: 1 .25;
		}
	}
</style>